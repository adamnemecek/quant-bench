{
  "name": "quant-bench",
  "version": "0.0.1",
  "description": "An algorithmic backtesting library written in TypeScript.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc --watch -p tsconfig.json",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": {
    "url": "https://github.com/quant-bench/quant-bench",
    "type": "git"
  },
  "author": "Eugene Duvenage",
  "license": "MIT",
  "devDependencies": {
    "@types/bluebird": "^3.5.18",
    "@types/jest": "^21.1.8",
    "@types/js-yaml": "^3.10.1",
    "@types/jsonfile": "^4.0.1",
    "@types/node": "^8.0.53",
    "@types/nunjucks": "^3.0.0",
    "del": "^3.0.0",
    "dotbin": "^1.0.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "nunjucks": "^3.0.1",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "homedir": "^0.6.0",
    "js-yaml": "^3.10.0",
    "jsonfile": "^4.0.0",
    "talib": "^1.0.2"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --fix",
      "git add"
    ]
  }
}
