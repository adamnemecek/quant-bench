{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "args": [
        "--no-color"
    ],
    "tasks": [{
            "taskName": "build",
            "args": [],
            "isBuildCommand": true,
            "isBackground": false,
            "problemMatcher": [{
                "owner": "tslint",
                "fileLocation": [
                    "relative",
					"${workspaceRoot}"
                ],
                "severity": "warning",
                "pattern": {
                    "regexp": "^(\\S.*)\\[(\\d+), (\\d+)\\]:\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }, "$tsc", "$jshint"]
        },
        {
            "taskName": "test",
            "args": [],
            "isTestCommand": true
        }
    ]
}